<div class="min-h-screen bg-default text-default">
  <section class="relative h-[40vh] overflow-hidden">
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url(&quot;https://images.unsplash.com/photo-1511379938547-c1f69419868d?q=80&amp;w=2070&quot;);">
      <div class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent"></div>
    </div>
    <div class="relative h-full px-4 sm:px-8">
      <div class="max-w-6xl mx-auto h-full flex items-end pb-12">
        <div>
          <div class="flex items-center gap-3 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shopping-bag w-6 h-6 text-primary">
              <path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path>
              <path d="M3 6h18"></path>
              <path d="M16 10a4 4 0 0 1-8 0"></path>
            </svg>
            <span class="text-primary font-medium">RAU STORE</span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-4"><%= t(".store_title") %></h1>
          <p class="text-gray-300 max-w-xl"><%= t(".store_subtitle") %></p>
        </div>
      </div>
    </div>
  </section>

  <div class="px-4 sm:px-8 py-12">
    <div class="max-w-6xl mx-auto">
      <!-- Category Blocks -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <!-- Music Block -->
        <%= link_to music_store_index_path, class: "group relative overflow-hidden rounded-xl aspect-[4/3]" do %>
          <div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110"
               style="background-image: url('https://images.unsplash.com/photo-1511379938547-c1f69419868d?q=80&w=2070');">
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-black/20"></div>
          </div>
          <div class="relative h-full p-6 flex flex-col justify-end">
            <div class="mb-4">
              <%= render "products/icons/music", class: "w-8 h-8 text-primary" %>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2"><%= t(".music") %></h3>
            <p class="text-gray-300"><%= t(".music_description") %></p>
          </div>
        <% end %>

        <!-- Gear Block -->
        <%= link_to gear_store_index_path, class: "group relative overflow-hidden rounded-xl aspect-[4/3]" do %>
          <div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110"
               style="background-image: url('https://images.unsplash.com/photo-1598488035139-bdbb2231ce04?q=80&w=2070');">
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-black/20"></div>
          </div>
          <div class="relative h-full p-6 flex flex-col justify-end">
            <div class="mb-4">
              <%= render "products/icons/gear", class: "w-8 h-8 text-primary" %>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2"><%= t(".gear") %></h3>
            <p class="text-gray-300"><%= t(".gear_description") %></p>
          </div>
        <% end %>

        <!-- Services Block -->
        <%= link_to services_store_index_path, class: "group relative overflow-hidden rounded-xl aspect-[4/3]" do %>
          <div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-110"
               style="background-image: url('https://images.unsplash.com/photo-1470225620780-dba8ba36b745?q=80&w=2070');">
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-black/20"></div>
          </div>
          <div class="relative h-full p-6 flex flex-col justify-end">
            <div class="mb-4">
              <%= render "products/icons/service", class: "w-8 h-8 text-primary" %>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2"><%= t(".services") %></h3>
            <p class="text-gray-300"><%= t(".services_description") %></p>
          </div>
        <% end %>
      </div>

      <!-- Search and Filters -->
      <div class="mb-12 space-y-6">
        <div class="relative max-w-md">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
          </svg>
          <input type="text" placeholder="<%= t('.search_placeholder') %>" class="w-full pl-10 pr-4 py-2 bg-neutral-900 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary">
        </div>
        <div class="flex flex-wrap gap-3">
          <%= link_to t(".all"), store_index_path, class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{current_page?(store_index_path) ? 'bg-primary text-white' : 'bg-neutral-900 hover:bg-neutral-800'}" %>
          
          <%= link_to t(".music"), music_store_index_path, class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{current_page?(music_store_index_path) ? 'bg-primary text-white' : 'bg-neutral-900 hover:bg-neutral-800'}" %>
          
          <%= link_to t(".services"), services_store_index_path, class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{current_page?(services_store_index_path) ? 'bg-primary text-white' : 'bg-neutral-900 hover:bg-neutral-800'}" %>
          
          <%= link_to t(".accessories"), accessories_store_index_path, class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{current_page?(accessories_store_index_path) ? 'bg-primary text-white' : 'bg-neutral-900 hover:bg-neutral-800'}" %>
          
          <%= link_to t(".gear"), gear_store_index_path, class: "px-4 py-2 rounded-full text-sm font-medium transition-colors #{current_page?(gear_store_index_path) ? 'bg-primary text-white' : 'bg-neutral-900 hover:bg-neutral-800'}" %>
        </div>
      </div>

      <!-- Products Grid -->
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <%# = render partial: "products/shared/product_card", collection: @products, as: :product %>
      </div>
    </div>
  </div>
</div>