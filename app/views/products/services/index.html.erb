<%= render "store/header", title: t(".services"), subtitle: t(".services_subtitle") %>

<div class="px-4 sm:px-8 py-12">
  <div class="max-w-6xl mx-auto">
    <div class="mb-12 space-y-6">
      <%= render "store/search_bar" %>
      
      <div class="flex flex-wrap gap-3">
        <button class="px-4 py-2 rounded-full text-sm font-medium transition-colors bg-primary text-white">
          <%= t(".all_services") %>
        </button>
        <button class="px-4 py-2 rounded-full text-sm font-medium transition-colors bg-neutral-900 hover:bg-neutral-800">
          <%= t(".mastering") %>
        </button>
        <button class="px-4 py-2 rounded-full text-sm font-medium transition-colors bg-neutral-900 hover:bg-neutral-800">
          <%= t(".mixing") %>
        </button>
        <button class="px-4 py-2 rounded-full text-sm font-medium transition-colors bg-neutral-900 hover:bg-neutral-800">
          <%= t(".production") %>
        </button>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <%= render partial: "products/product_card", collection: @services, as: :product %>
    </div>
  </div>
</div>
