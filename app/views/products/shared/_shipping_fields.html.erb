<div class="nested-fields" data-new-record="<%= form.object.new_record? %>">
  <div class="flex items-center space-x-3">
    <div class="flex-1">
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
        <div>
          <%= form.text_field :country %>
        </div>
        <div>
          <%= form.number_field :base_cost, step: 0.01, label: "Base Cost" %>
        </div>
        <div>
          <%= form.number_field :additional_cost, step: 0.01, label: "Additional Item Cost" %>
        </div>
      </div>
    </div>
    <div>
      <%= form.hidden_field :_destroy %>
      <%= link_to "Remove", "#",
          class: "text-red-500",
          data: { action: "click->nested-form#remove_association" } %>
    </div>
  </div>
</div>
