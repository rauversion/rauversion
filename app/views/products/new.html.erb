<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white">What would you like to sell?</h1>
    <p class="mt-4 text-xl text-gray-600 dark:text-gray-300">Choose the type of product you want to create</p>
  </div>

  <!-- 
    bg-purple-100 dark:bg-purple-900 
    bg-pink-100 dark:bg-pink-900 
    bg-blue-100 dark:bg-blue-900 
    bg-amber-100 dark:bg-amber-900 
    bg-emerald-100 dark:bg-emerald-900 
  -->

  <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
    <%= render "products/type_card", 
        title: "Music",
        description: "Sell your vinyl records, CDs, cassettes, and digital albums.",
        icon_class: "music",
        color: "purple",
        path: new_user_products_music_path(current_user.username) %>

    <%= render "products/type_card", 
        title: "Music Gear",
        description: "List your instruments, audio gear, and DJ equipment.",
        icon_class: "gear",
        color: "blue",
        path: new_user_products_gear_path(current_user.username) %>

    <%= render "products/type_card", 
        title: "Merchandise",
        description: "Sell t-shirts, posters, and other branded merchandise.",
        icon_class: "merch",
        color: "pink",
        path: new_user_products_merch_path(current_user.username) %>

    <%= render "products/type_card", 
        title: "Accessories",
        description: "Offer music-related accessories and collectibles.",
        icon_class: "accessory",
        color: "amber",
        path: new_user_products_accessory_path(current_user.username) %>

    <%= render "products/type_card", 
        title: "Services",
        description: "Offer coaching, feedback, and music classes.",
        icon_class: "service",
        color: "emerald",
        path: new_user_products_service_path(current_user.username) %>
  </div>
</div>