<%= link_to path, class: "group" do %>
  <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-all duration-300 transform hover:-translate-y-1 hover:shadow-xl">
    <div class="absolute inset-0 bg-gradient-to-br from-<%= color %>-500/20 to-<%= gradient_color(color) %>-500/20 opacity-0 group-hover:opacity-100 transition-opacity"></div>
    <div class="p-8">
      <div class="w-12 h-12 bg-<%= color %>-100 dark:bg-<%= color %>-900 rounded-full flex items-center justify-center mb-6">
        <%= render "products/icons/#{icon_class}" %>
      </div>
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2"><%= title %></h3>
      <p class="text-gray-600 dark:text-gray-300"><%= description %></p>
    </div>
  </div>
<% end %>
