<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
  <h1 style="color: #2d3748; margin-bottom: 24px;">
    <%= t('.greeting', customer: @customer.username) %>
  </h1>

  <p style="color: #4a5568; margin-bottom: 16px;">
    <%= t('.confirmation_message',
          service: @service.title,
          provider: @provider.username) %>
  </p>

  <div style="background-color: #f7fafc; border-radius: 8px; padding: 16px; margin: 24px 0;">
    <h2 style="color: #2d3748; font-size: 18px; margin-bottom: 16px;">
      <%= t('.booking_details') %>
    </h2>

    <ul style="list-style: none; padding: 0; margin: 0;">
      <li style="margin-bottom: 8px;">
        <strong><%= t('.service') %>:</strong> <%= @service.title %>
      </li>
      <li style="margin-bottom: 8px;">
        <strong><%= t('.provider') %>:</strong> <%= @provider.username %>
      </li>
      <li style="margin-bottom: 8px;">
        <strong><%= t('.category') %>:</strong> <%= @service.category.titleize %>
      </li>
      <li style="margin-bottom: 8px;">
        <strong><%= t('.duration') %>:</strong> <%= @service.duration_minutes %> <%= t('.minutes') %>
      </li>
      <li style="margin-bottom: 8px;">
        <strong><%= t('.delivery_method') %>:</strong> <%= @service.delivery_method.titleize %>
      </li>
    </ul>
  </div>

  <p style="color: #4a5568; margin-bottom: 16px;">
    <%= t('.next_steps') %>
  </p>

  <div style="margin: 24px 0;">
    <%= link_to t('.view_booking_button'),
        service_booking_url(@service_booking),
        style: "display: inline-block; background-color: #4299e1; color: white; padding: 12px 24px; text-decoration: none; border-radius: 4px;" %>
  </div>

  <p style="color: #718096; font-size: 14px; margin-top: 24px;">
    <%= t('.support_message', email: mail_to('support@example.com')) %>
  </p>
</div>
